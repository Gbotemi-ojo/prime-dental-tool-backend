{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* Emit */
    "outDir": "./dist",
    "removeComments": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* --- RELAXED TYPE CHECKING (The Fix) --- */
    "strict": false,                       /* Was true. Disables strict mode. */
    "noImplicitAny": false,                /* Was true. Allows 'any' types. */
    "strictNullChecks": false,             /* Was true. Stops complaining about null/undefined. */
    "strictPropertyInitialization": false, /* Was true. Stops complaining about class properties. */
    "alwaysStrict": false,                 /* Was true. */
    
    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
